<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="Lable">
        <attr name="lable_textSize" format="dimension"></attr>
        <attr name="lable_opttextColor" format="color"></attr>
        <attr name="lable_notextColor" format="color"></attr>
        <attr name="lable_padding" format="integer"></attr>
        <attr name="lable_margin" format="integer"></attr>
        <attr name="lable_ismultiple" format="boolean"></attr>
    </declare-styleable>
</resources>
